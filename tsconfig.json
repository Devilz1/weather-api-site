{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "target": "es2015",
    "lib": [
      "es2015",
      "es2016",
      "es2017",
      "dom"
    ],
    "baseUrl": "./src",
    "outDir": "./dist",
    "jsx": "react",
    "noImplicitAny": true,
    "strictNullChecks": true,
    "module": "esNext",
    "strictFunctionTypes": true,
    "skipLibCheck": true
  },
  "include": [
    "./src",
    "./typescript/index.d.ts",
    "./rtl.setup.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
